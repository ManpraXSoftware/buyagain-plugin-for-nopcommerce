@model List<OrderDetailsModel.OrderItemModel>

<link rel="stylesheet" href="~/Plugins/Widgets.BuyAgain/Content/styles.css" />

@if (Model.Count > 0)
{
    <div>
        <div class="buyagaintitle"><strong>@T("Plugins.Widgets.BuyAgain.Fields.BuyAgain"</strong>
            
        </div>
            <a href="@Url.RouteUrl("CustomerOrders")" class="buya">@T("Plugins.Widgets.BuyAgain.Fields.SeeMore"</a>
                        <div class="product-grid">        
                            <div class="item-grid">            
                                @foreach (var item in Model)
                                {
                                    <div class="item-box">
                                        @await Html.PartialAsync("~/Plugins/Widgets.BuyAgain/Views/PublicInfo.cshtml", item)
                                    </div>
                                }
                            </div>
                         </div>
    </div>
}
